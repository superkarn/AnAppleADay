@using A3D.Library.Global

<ul class="navbar-nav">
@if (User?.Identity?.IsAuthenticated == true)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" href="@Application.Authentication.BaseUrl/Identity/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        @* TODO log out to a different domain *@
        <form class="form-inline" action="@Application.Authentication.BaseUrl/Identity/Account/Logout" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="@Application.Authentication.BaseUrl/Identity/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="@Application.Authentication.BaseUrl/Identity/Account/Login">Login</a>
    </li>
}
</ul>
